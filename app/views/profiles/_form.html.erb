<h1>Add Profile Details</h1>

<div class ="profile">
<%=form_with model: profile,url:profile_path, html: { multipart: true } do |form| %>
  
  <%= form.hidden_field :user_id, id:"user.id", value:current_user.id, class:"form-control" %>
  <%= form.hidden_field :organization_id, id:"organization.id", value:@organization_id, class:"form-control" %>

  <div class="form-group">
    <%= form.label :full_name %>
    <%= form.text_field :full_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Gender %>
    <%= form.select :gender, options_for_select(['Male', 'Female', 'Other']), { prompt: 'Select Gender' }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_area :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_birth %>
    <%= form.date_select :date_of_birth, { start_year: 1900, end_year: Date.today.year }, class: "form-control" %>
  </div>


  <%= form.submit "Create Profile", class: "btn btn-primary" %>
<% end %>

</div>