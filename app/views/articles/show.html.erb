<div class="show_article">
  <h1>Articles</h1>
  <h2><%= @article.title %></h2>
  <p><%= @article.body %></p>
</div>

<ul>
  <% if user_signed_in? %>
    <li><%= link_to "Edit", edit_article_path(@article) %></li>
    <li>
      <%= link_to "Delete", article_path(@article), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      } %>
    </li>
  <% end %>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<div>
  <%= link_to "Home", root_path %>
</div>
